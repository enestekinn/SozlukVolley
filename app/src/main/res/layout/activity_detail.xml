<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailActivity"
    android:background="@color/white">

    <!-- English Word -->
    <View
        android:id="@+id/english_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/display_language_shape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/english_view"
        android:layout_alignTop="@+id/english_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="English"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDetailEnglish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#CF1F1F"
        android:textSize="34sp"
        android:textAlignment="center"
        tools:text="TextView"
        android:layout_alignStart="@+id/english_view"
        android:layout_alignTop="@+id/english_view"
        android:layout_alignEnd="@+id/english_view"
        android:layout_alignBottom="@+id/english_view" />

    <!-- Turkish word -->

    <View
        android:id="@+id/turkey_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/english_view"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/display_language_shape" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/english_view"
        android:layout_alignTop="@+id/turkey_view"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Turkish"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvDetailTurkce"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="34sp"
        android:gravity="center"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        tools:text="TextView"
        android:layout_alignStart="@+id/turkey_view"
        android:layout_alignTop="@+id/turkey_view"
        android:layout_alignEnd="@+id/turkey_view"
        android:layout_alignBottom="@+id/turkey_view"/>

</RelativeLayout>



